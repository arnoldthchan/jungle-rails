<%= form_for [@product, Review.new] do |f| %>
  <% if flash[:notice] %>
    <div class="notice"><%= flash[:notice] %></div>
  <% end %>

  <p>
    <%= f.label :rating %>
    <%= f.select :rating, (1..5).to_a , :include_blank => true %>
  </p>

  <p>
    <%= f.label 'Comment' %><br>
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.submit class: 'btn btn-primary' %>
  </p>
<% end %>
